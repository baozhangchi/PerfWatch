<Application
    x:Class="PerfWatch.App"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PerfWatch"
    xmlns:suki="https://github.com/kikipoulet/SukiUI"
    RequestedThemeVariant="Default">
    <!--  "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options.  -->

    <Application.DataTemplates>
        <local:ViewLocator />
    </Application.DataTemplates>

    <Application.Styles>
        <FluentTheme />
        <StyleInclude Source="avares://PerfWatch/Components/TileView.axaml" />
        <StyleInclude Source="avares://PerfWatch/Components/TileItem.axaml" />
        <suki:SukiTheme Locale="zh-CN" ThemeColor="Blue" />
    </Application.Styles>
</Application>